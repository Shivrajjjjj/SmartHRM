@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center p-5">
                    <h1 class="display-4 fw-bold text-primary">Welcome to SmartHRM</h1>
                    <p class="lead mt-3 text-muted">
                        Your complete solution for managing human resources, employee data, and organization workflows efficiently.
                    </p>

                    <hr class="my-4" />

                    <div class="row mt-4">
                        <div class="col-md-4 mb-3">
                            <div class="p-4 border rounded-4 shadow-sm h-100">
                                <h5 class="fw-bold text-success">Organizations</h5>
                                <p class="text-muted small mb-0">Manage organization details, codes, and active status easily.</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-4 border rounded-4 shadow-sm h-100">
                                <h5 class="fw-bold text-info">Employees</h5>
                                <p class="text-muted small mb-0">Track employee records, roles, and departments efficiently.</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-4 border rounded-4 shadow-sm h-100">
                                <h5 class="fw-bold text-warning">Reports</h5>
                                <p class="text-muted small mb-0">Generate insights and export data for decision-making.</p>
                            </div>
                        </div>
                    </div>

                    <a href="/Organization" class="btn btn-primary btn-lg mt-4 px-4 rounded-pill">
                        Go to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
