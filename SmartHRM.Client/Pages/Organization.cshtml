@page
@model OrganizationModel
@{
    ViewData["Title"] = "Organization Management";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">🏢 Register Organization (SuperAdmin)</h5>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="OrganizationName" class="form-label">Organization Name</label>
                    <input asp-for="OrganizationName" class="form-control" placeholder="Enter organization name" />
                </div>
                <div class="col-md-6">
                    <label asp-for="OrganizationCode" class="form-label">Organization Code</label>
                    <input asp-for="OrganizationCode" class="form-control" placeholder="Enter organization code" />
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" asp-for="IsActive">Is Active</label>
                    </div>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-success px-4">💾 Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">📋 Organizations</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Active</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Organizations != null && Model.Organizations.Any())
                    {
                        foreach (var o in Model.Organizations)
                        {
                            <tr>
                                <td>@o.OrganizationId</td>
                                <td>@o.OrganizationName</td>
                                <td>@o.OrganizationCode</td>
                                <td>
                                    <input class="form-check-input" type="checkbox" disabled @(o.IsActive ? "checked" : "") />
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No organizations found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
