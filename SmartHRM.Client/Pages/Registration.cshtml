@page
@model RegistrationModel
@{
    ViewData["Title"] = "User Registration";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">🧑‍💼 User Registration (SuperAdmin / HR)</h5>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                </div>
                <div class="col-md-6">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                </div>

                <div class="col-md-6">
                    <label asp-for="SelectedRoleId" class="form-label">Role</label>
                    <select asp-for="SelectedRoleId" class="form-select">
                        <option value="">Select Role</option>
                        @foreach (var r in Model.Roles)
                        {
                            <option value="@r.RoleId">@r.RoleName</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="SelectedOrgId" class="form-label">Organization</label>
                    <select asp-for="SelectedOrgId" class="form-select">
                        <option value="">Select Organization</option>
                        @foreach (var o in Model.Organizations)
                        {
                            <option value="@o.OrganizationId">@o.OrganizationName</option> <!-- ✅ fixed -->
                        }
                    </select>
                </div>

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-success px-4">📝 Register</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">📋 Registered Users</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>UserName</th>
                        <th>Role</th>
                        <th>Organization</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        foreach (var u in Model.Users)
                        {
                            <tr>
                                <td>@u.UserId</td>
                                <td>@u.FirstName @u.LastName</td>
                                <td>@u.Email</td>
                                <td>@u.UserName</td>
                                <td>@u.Role?.RoleName</td>
                                <td>@u.Organization?.OrganizationId</td> <!-- ✅ fixed -->
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
